{
    "manifest_version": 2,
    "name": "__MSG_chrome_extension_name__",
    "short_name": "FPS",
    "description": "__MSG_chrome_extension_description__",
    "default_locale": "en",
    "version": "1.1.11",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "https://*.facebook.com/*",
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self';",
    "content_scripts": [{
        "matches": ["https://*.facebook.com/*"],
        "js": ["analytics.js", "main.js"],
        "css": ["style.css"],
        "run_at": "document_end"
    }],
    "web_accessible_resources": ["analytics.js", "style.css"]
}