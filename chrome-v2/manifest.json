{
    "manifest_version": 2,
    "name": "__MSG_chrome_extension_name__",
    "short_name": "Fast Boo",
    "description": "__MSG_chrome_extension_description__",
    "default_locale": "en",
    "version": "2.0.0",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
      "default_icon": "img/icon24-gray.png"
    },
    "permissions": [
      "tabs",
      "webRequest",
      "https://*.fbcdn.net/*"
    ],
    "options_ui": {
      "page": "options/index.html",
      "open_in_tab": true
    },
    "background": {
        "scripts": ["bg/background.js"],
        "persistent": true
    },
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self';",
    "content_scripts": [{
        "matches": ["https://*.facebook.com/*"],
        "js": ["js/analytics.js", "js/index.js", "js/lz-string.min.js"],
        "css": ["css/style.css"],
        "run_at": "document_start"
    }],
    "web_accessible_resources": ["js/analytics.js"]
}